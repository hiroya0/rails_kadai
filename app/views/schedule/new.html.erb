<h3>予定の新規追加</h3>
<%= render "shared/error", obj: @schedule %>

 <%= form_with model: @schedule do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :start_day ,"開始日" %></th>
       <td><%= f.datetime_field :start_day %></td>
     </tr>
 
     <tr>
       <th><%= f.label :end_day ,"終了日" %></th>
       <td><%= f.datetime_field :end_day %></td>
     </tr>
 
     <tr>
       <th><%= f.label :all_day ,"終日の場合はチェックを入れます" %></th>
       <td><%= f.check_box :all_day %></td>
     </tr>

     <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo%></td>
     </tr>

   </table>
 
   <div>
     <ul>
       <li><%= f.submit "登録完了する"%></li>
       <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
     </ul>
   </div>
 <% end %>