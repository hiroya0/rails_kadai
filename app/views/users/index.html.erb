<h3>ユーザー情報一覧</h3>
 
 <table>
   <thead>
     <tr>
       <th>id</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>スケジュールメモ</th>
       <th>更新日時</th>
       <th>作成日時</th>
     </tr>
   </thead>
 
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= user.id %></td>
         <td><%= user.title %></td>
         <td><%= user.start_day %></td>
         <td><%= user.end_day %></td>
         <td><%= user.all_day %></td>
         <td><%= user.memo %></td>
         <td><%= user.updated_at.to_s(:datetime_jp) %></td>
         <td><%= user.created_at.to_s(:datetime_jp) %></td>
         <td>
         <%= link_to "詳細", user %>
         </td>
         </tr>
     <% end %>
   </tbody>
 </table>
 
 <p><%= link_to "ユーザー新規登録", :new_user %></p>